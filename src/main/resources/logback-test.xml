<configuration>
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%gray(%d{yyyy/MM/dd-HH:mm:ss.SSS})][%highlight(%-5level)]%logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <logger name="it.wldt.adapter.coap.physical.server.CoapTestServer" level="INFO"/>
    <logger name="it.wldt.adapter.coap.physical.CoapPhysicalAdapterTest" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>